{
  "name": "node-js-skeleton",
  "version": "0.0.0",
  "description": "Node.js Skeleton developed with TypeScript, using Clean Architecture concepts, Domain-Driven Design (DDD) and Test Driven Development (TDD)",
  "main": "dist/server.js",
  "author": "Matheus Pereira Leal",
  "license": "ISC",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run --passWithNoTests",
    "test:ci": "npm run test -- --coverage",
    "test:staged": "vitest related --run",
    "test:watch": "vitest --passWithNoTests"
  },
  "devDependencies": {
    "@commitlint/cli": "18.4.3",
    "@commitlint/config-conventional": "18.4.3",
    "@types/node": "20.10.4",
    "@vitest/coverage-v8": "1.0.2",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard-with-typescript": "40.0.0",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-n": "16.3.1",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vitest-globals": "1.4.0",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "4.2.2",
    "vitest": "1.0.2",
    "vitest-mock-extended": "1.3.1"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "clean-architecture",
    "domain-driven-design",
    "test-driven-development"
  ],
  "engines": {
    "node": ">= 20.10.0"
  }
}
